# Vikunja API Token
# Generate this token after first login to Vikunja
VIKUNJA_API_TOKEN=your_vikunja_api_token_here

# Optional: Custom ports
# VIKUNJA_PORT=3456
# VIKUNJA_HOOK_PORT=5082
# MINIO_PORT=9000
# MINIO_CONSOLE_PORT=9001

# Optional: Database credentials (defaults are fine for local development)
# POSTGRES_PASSWORD=vikunja
# POSTGRES_USER=vikunja
# POSTGRES_DB=vikunja

# Optional: MinIO credentials
# MINIO_ROOT_USER=vikunja
# MINIO_ROOT_PASSWORD=vikunja123

# Optional: Enable S3 storage (uncomment to use MinIO)
# VIKUNJA_FILES_S3_ENABLED=true

# Optional: Enable mailer (uncomment and configure)
# VIKUNJA_MAILER_ENABLED=true
# VIKUNJA_MAILER_HOST=smtp.example.com
# VIKUNJA_MAILER_PORT=587
# VIKUNJA_MAILER_USERNAME=user@example.com
# VIKUNJA_MAILER_PASSWORD=password
# VIKUNJA_MAILER_FROMEMAIL=vikunja@example.com
