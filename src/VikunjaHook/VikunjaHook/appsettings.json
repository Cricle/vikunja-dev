{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "VikunjaHook.Mcp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Vikunja": {
    "DefaultTimeout": 30000
  },
  "Mcp": {
    "ServerName": "vikunja-mcp",
    "Version": "1.0.0",
    "MaxConcurrentConnections": 100
  },
  "Cors": {
    "AllowedOrigins": [ "*" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ],
    "AllowedHeaders": [ "*" ]
  },
  "RateLimit": {
    "Enabled": true,
    "RequestsPerMinute": 60,
    "RequestsPerHour": 1000
  }
}
